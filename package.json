  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy-market-enabled": "hardhat deploy --tags market-enabled --network",
    "deploy-no-market": "hardhat deploy --tags no-market --network",
    "lint": "yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint 'src/**/*.ts' '*.ts' --max-warnings 0 --fix",
    "fmt:sol": "prettier 'contracts/**/*.sol' -w",
    "fmt:ts": "prettier 'src/**/*.ts' 'test/**/*.ts' '*.ts' -w",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@clrfund/waffle-mock-contract": "^0.0.11",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomicfoundation/ignition-core": "^0.15.5",
    "@openzeppelin/contracts": "4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/buffer-xor": "^2.0.2",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "chai": "4.3.7",
    "dotenv": "^16.4.5",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "^6.11.1",
    "hardhat": "^2.22.2",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.12.2",
    "hardhat-deploy-ethers": "^0.4.1",
    "hardhat-gas-reporter": "^2.1.1",
    "hardhat-interface-generator": "^0.0.6",
    "hardhat-tracer": "^3.1.0",
    "hash-wasm": "^4.9.0",
    "patch-package": "^8.0.0",
    "prettier": "2.8.4",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-solidity": "1.1.2",
    "solhint": "^4.5.4",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "4.9.5"
  }
